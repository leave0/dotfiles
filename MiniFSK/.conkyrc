background no
use_xft yes
xftfont micro:size=6
update_interval 2.0
total_run_times 0
own_window no
own_window_transparent yes
own_window_type override
double_buffer yes
maximum_width 250
draw_shades no
draw_outline yes
draw_borders no
stippled_borders 0
border_margin 5
border_width 1
default_color d9d9d9
default_shade_color c80000
default_outline_color 383838
alignment bottom_right
gap_x 25
gap_y 15
no_buffers yes
cpu_avg_samples 2
net_avg_samples 2

TEXT
${color #ffffff}UpTime: ${color }$uptime
${color #ffffff}Kernel: ${color }$kernel
${color #ffffff}CPU: ${color}${cpu}% | ${ibm_temps 0}F | ${freq_g}Ghz 
${cpu cpu0}% ${cpugraph cpu0 10,100 000000 000000} ${cpu cpu1}% ${cpugraph cpu1 10,100 000000 000000}

${color #ffffff}Name              PID     CPU%   MEM%
${color #ffffff}CPU usage
$color ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
$color ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
$color ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color #ffffff}Mem usage
$color ${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
$color ${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
$color ${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}

${color #ffffff}RAM: ${color }$memperc%/$memmax     ${color #ffffff}SWAP: ${color }$swapperc%/$swapmax
${memgraph 10,120} ${swapbar 10,120}

${color #ffffff}/     $color${fs_used /}/${fs_size /}     ${fs_bar 5,70 /}
${color #ffffff}/home $color${fs_used /home}/${fs_size /home}  ${fs_bar 5,70 /home}

${color #ffffff}Network:
${if_up eth0} ${color #ffffff}Wired: ${color }${addr eth0}
${color}Down: ${downspeedf eth0}KB/s                Up: ${upspeed eth0}KB/s
${downspeedgraph eth0 10,120 000000 000000} ${upspeedgraph eth0 10,120 000000 000000}
${endif}
${if_up wlan0} ${color #ffffff}Wireless: ${color }${wireless_essid wlan0}@${addr wlan0} | ${wireless_link_qual_perc wlan0}%
${color}Down: ${downspeedf wlan0}KB/s                Up: ${upspeedf wlan0}KB/s
${downspeedgraph wlan0 10,120 000000 000000} ${upspeedgraph wlan0 10,120 000000 000000}
${endif}
${color #ffffff}MPD: ${color }${alignc}$mpd_status
${color }${alignc}$mpd_artist
${color #4c4f54}${alignc}$mpd_title
${color }$mpd_bar 5, 100
${color }${alignc}${mpd_vol}% volume / ${mpd_bitrate} kbps
${color #ffffff}TODO.txt
${head /home/fsk141/Dropbox/todo/todo.txt 2 20}

